{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pia",
  "version": "0.1.0",
  "identifier": "com.pia.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Pia",
        "label": "main",
        "width": 420,
        "height": 280,
        "minWidth": 300,
        "minHeight": 200,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": true,
        "center": true,
        "skipTaskbar": true
      },
      {
        "title": "Cursor Overlay",
        "label": "cursor-overlay",
        "url": "cursor-overlay.html",
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "fullscreen": false,
        "resizable": false,
        "visible": false,
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  }
}
